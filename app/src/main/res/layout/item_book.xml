<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="#FFF9C4">

        <!-- ImageView cho hình ảnh sách -->
        <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/book"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:layout_marginEnd="12dp" />

        <!-- Layout dọc để chứa thông tin sách -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <!-- Mã sách -->
            <TextView
                android:id="@+id/tvMaSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID:1"
                android:textSize="16sp"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif"/>

            <!-- Tên sách -->
            <TextView
                android:id="@+id/tvTenSach"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Kể chuyện cổ tích"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Tác giả -->
            <TextView
                android:id="@+id/tvTacgia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nguyễn Nhật Ánh"
                android:textSize="18sp"
                android:textStyle="italic"
                android:textColor="@android:color/darker_gray"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif"/>

            <!-- Giá sách -->
            <TextView
                android:id="@+id/tvGia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000 VND"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_red_dark"
                android:paddingBottom="4dp"
                android:fontFamily="sans-serif-medium"/>

            <!-- Loại sách -->
            <TextView
                android:id="@+id/tvTenLoai"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hành động"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- ImageView cho nút edit -->
        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:layout_marginEnd="8dp"
            app:tint="@android:color/holo_blue_light" />

        <!-- ImageView cho nút delete -->
        <ImageView
            android:id="@+id/ivDel"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_delete"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
             app:tint="@android:color/holo_red_light" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
